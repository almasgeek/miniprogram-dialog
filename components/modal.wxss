.dialog-mask {
  z-index: 999;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  position: fixed;
  height: 100vh;
  width: 100vw;
  background-color: rgba(0, 0, 0, 0.4);
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.dialog-mask .dialog {
  background-color: #fff;
  width: calc(80% - 60rpx);
  height: auto;
  border-radius: 10rpx;
  text-align: center;
}

.dialog-mask .dialog .title {
  font-size: 28rpx;
  padding-top: 20rpx;
  color: #434343;
}

.dialog-mask .dialog .body {
  font-size: 28rpx;
  color: #434343;
}

.dialog-mask .dialog .footer {
  display: flex;
  justify-content: space-between;
}

.dialog-mask .dialog .footer .btn {
  flex-basis: calc(50% - 1rpx);
  color: #888;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.dialog-mask .dialog .footer .cancel {
  border-left: 1rpx solid #efefef;
  color: #666;
}

.dialog-mask .dialog .footer .confirm {
  color: #03a9f4;
}
